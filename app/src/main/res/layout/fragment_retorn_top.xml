<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/md_theme_primary"
    tools:context=".RetornTop">

        <ImageButton
            android:id="@+id/returnBoto"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="@color/md_theme_surfaceContainer"
            android:scaleType="centerInside"
            android:src="@drawable/returnicon"
            tools:ignore="ContentDescription,DuplicateSpeakableTextCheck,InefficientWeight,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_theme_surfaceContainer"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:text="@string/returnText"/>
    </LinearLayout>